# Lost & Found Platform - Environment Configuration Template
# Copy this file to .env and update the values

# ========== Database Configuration ==========
POSTGRES_DB=lost_found
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# ========== Redis Configuration ==========
REDIS_PORT=6379
REDIS_CACHE_TTL=3600

# ========== MinIO Configuration ==========
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# ========== pgAdmin Configuration ==========
PGADMIN_EMAIL=admin@lostfound.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

# ========== Service Ports ==========
API_PORT=8000
NLP_PORT=8001
VISION_PORT=8002
ADMIN_PORT=3000

# ========== Security ==========
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ========== Application Configuration ==========
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ========== Service Workers ==========
API_WORKERS=4
NLP_WORKERS=2
VISION_WORKERS=2

# ========== Database Pool Configuration ==========
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ========== Media Configuration ==========
MAX_UPLOAD_SIZE_MB=10
MAX_IMAGE_SIZE_MB=10
MAX_IMAGE_DIMENSION=4096

# ========== Matching Configuration ==========
MATCH_MIN_SCORE=0.65
MATCH_TEXT_THRESHOLD=0.70
MATCH_IMAGE_THRESHOLD=0.75
HASH_THRESHOLD_SIMILAR=10
HASH_THRESHOLD_MATCH=14

# ========== CORS Configuration ==========
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# ========== Feature Flags ==========
ENABLE_REDIS_CACHE=true
ENABLE_METRICS=true
ENABLE_RATE_LIMIT=true
ENABLE_NOTIFICATIONS=true
