# ================================================================
# Lost & Found - Domain-Driven Design Environment Configuration
# ================================================================
# Environment variables for the DDD architecture
# Copy this file to .env and customize for your environment
# ================================================================

# ================================================================
# Environment Settings
# ================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO
NODE_ENV=development

# ================================================================
# Database Configuration
# ================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=lostfound
DB_PORT=5433

# Database Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_ECHO=false

# ================================================================
# Redis Configuration
# ================================================================
REDIS_PASSWORD=LF_Redis_2025_Pass!
REDIS_PORT=6379
REDIS_MAX_CONNECTIONS=20

# ================================================================
# MinIO Object Storage Configuration
# ================================================================
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_SECURE=false

# ================================================================
# JWT Authentication Configuration
# ================================================================
JWT_SECRET_KEY=super-secret-jwt-key-change-me-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ================================================================
# Service URLs
# ================================================================
API_PORT=8000
NLP_PORT=8001
VISION_PORT=8002
ADMIN_PORT=3000

# ================================================================
# CORS and Security
# ================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ================================================================
# Domain-Specific Settings
# ================================================================
REPORTS_PER_PAGE=20
MATCHES_PER_PAGE=20
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ================================================================
# NLP Service Settings
# ================================================================
SIMILARITY_THRESHOLD=0.7
FUZZY_MATCH_THRESHOLD=80
MAX_MATCHES=10
CACHE_TTL=3600
WORKER_CONCURRENCY=4
MAX_TEXT_LENGTH=10000

# ================================================================
# Vision Service Settings
# ================================================================
HASH_THRESHOLD_SIMILAR=10
HASH_THRESHOLD_MATCH=5
MAX_IMAGE_SIZE=10485760
MAX_IMAGE_DIMENSION=4096

# ================================================================
# Monitoring and Metrics
# ================================================================
METRICS_ENABLED=true

# ================================================================
# Admin Panel Configuration
# ================================================================
PGADMIN_EMAIL=postgres
PGADMIN_PASSWORD=postgres
PGADMIN_PORT=5050

# ================================================================
# Nginx Configuration
# ================================================================
NGINX_PORT=8080