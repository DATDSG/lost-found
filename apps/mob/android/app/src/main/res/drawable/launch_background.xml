<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color (change to your brand color if you want) -->
    <item android:drawable="@color/ic_launcher_background" />

    <!-- Center the icon; inset keeps comfortable margins on all densities -->
    <item>
        <inset
            android:insetLeft="48dp"
            android:insetTop="48dp"
            android:insetRight="48dp"
            android:insetBottom="48dp">
            <bitmap
                android:src="@drawable/ic_launcher_foreground"
                android:gravity="center" />
        </inset>
    </item>
</layer-list>
