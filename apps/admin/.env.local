# Lost & Found Admin Panel - Environment Configuration
# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# API Endpoints
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_ADMIN_API_BASE_URL=http://localhost:8000/api/v1/admin

# Authentication
NEXT_PUBLIC_JWT_STORAGE_KEY=admin_token

# CORS Configuration (matches backend CORS_ORIGINS)
NEXT_PUBLIC_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true
