# --- App ---
APP_NAME=lostfound-api
ENV=dev
PORT=8000
CORS_ORIGINS=*

# --- Auth ---
JWT_SECRET=changeme_super_secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# --- Database ---
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/lostfound

# --- S3 / MinIO ---
S3_ENDPOINT_URL=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET=lostfound-media
S3_PRESIGN_EXPIRES=3600

# --- Redis / RQ ---
REDIS_URL=redis://localhost:6379/0
RQ_DEFAULT_QUEUE=lostfound

# --- Admin bootstrap ---
ADMIN_EMAIL=admin@lostfound.local
ADMIN_PASSWORD=admin123

# --- Matching models & weights ---
TEXT_MODEL_VERSION=intfloat/multilingual-e5-small
IMAGE_MODEL_VERSION=phash-v1
GEO_MODEL_VERSION=geodesic-v1
MATCH_MODEL_VERSION=fusion-2025-09
MATCH_WEIGHT_TEXT=0.45
MATCH_WEIGHT_IMAGE=0.30
MATCH_WEIGHT_GEO=0.15
MATCH_WEIGHT_TIME=0.05
MATCH_WEIGHT_META=0.05