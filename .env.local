# Local Development Environment Configuration
# This setup minimizes external API dependencies while keeping core functionality

# =============================================================================
# DATABASE CONFIGURATION (Required)
# =============================================================================
DATABASE_URL=postgresql://lostfound:lostfound@localhost:5432/lostfound
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lostfound
DB_USER=lostfound
DB_PASSWORD=lostfound

# =============================================================================
# REDIS CONFIGURATION (Required for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
API_BASE_URL=http://localhost:8000
NLP_SERVICE_URL=http://localhost:8090
VISION_SERVICE_URL=http://localhost:8091

# =============================================================================
# AUTHENTICATION (Local development)
# =============================================================================
JWT_SECRET_KEY=local-development-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# FEATURE FLAGS - COST-CONSCIOUS SETUP
# =============================================================================
# Enable NLP since you mentioned you can invest in this
ENABLE_NLP=true
NLP_ON=true

# Enable basic computer vision (uses local models, no external APIs)
CV_ON=true

# Disable expensive external services for now
ENABLE_OAUTH=false
ENABLE_EMAIL=false
ENABLE_SMS=false

# =============================================================================
# FILE STORAGE (Local file system - no S3 costs)
# =============================================================================
# Leave S3 settings empty to use local file storage
S3_ENDPOINT_URL=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET=

# Local file storage settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# =============================================================================
# OPTIONAL EXTERNAL SERVICES (Disabled for cost savings)
# =============================================================================
# OAuth Configuration - Leave empty to disable
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Email Configuration - Leave empty to disable email features
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=

# SMS Configuration - Leave empty to disable SMS
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================================================
# API CONFIGURATION
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
API_V1_STR=/api/v1
PROJECT_NAME="Lost & Found System - Local Development"

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
ADMIN_EMAIL=admin@localhost
ADMIN_PASSWORD=admin123

# =============================================================================
# GEOSPATIAL & MATCHING CONFIGURATION
# =============================================================================
GEOHASH_PRECISION=6
MAX_SEARCH_RADIUS_KM=50.0
LOCATION_FUZZING_METERS=100
DEFAULT_TIME_WINDOW_DAYS=14
MAX_TIME_WINDOW_DAYS=90

# Matching weights (optimized for local setup)
WEIGHT_CATEGORY=0.35
WEIGHT_DISTANCE=0.25
WEIGHT_TIME=0.20
WEIGHT_ATTRIBUTES=0.20

# NLP weights (since you're enabling NLP)
WEIGHT_TEXT_SIMILARITY=0.30
WEIGHT_IMAGE_SIMILARITY=0.25

MIN_MATCH_SCORE=0.3
TOP_K_MATCHES=10