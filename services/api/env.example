# ================================================================
# Lost & Found API Service - Environment Configuration
# ================================================================
# Copy this file to .env and customize for your environment
# ================================================================

# ================================================================
# Environment Settings
# ================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# ================================================================
# Server Configuration
# ================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=1

# ================================================================
# Database Configuration
# ================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/lostfound
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_ECHO=false

# ================================================================
# Redis Configuration
# ================================================================
REDIS_URL=redis://:LF_Redis_2025_Pass!@redis:6379/0
REDIS_CACHE_TTL=3600
REDIS_MAX_CONNECTIONS=20

# ================================================================
# JWT Configuration
# ================================================================
JWT_SECRET_KEY=super-secret-jwt-key-change-me-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ================================================================
# MinIO Configuration
# ================================================================
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=lost-found-media
MINIO_SECURE=false

# ================================================================
# Service URLs
# ================================================================
NLP_SERVICE_URL=http://nlp:8001
VISION_SERVICE_URL=http://vision:8002

# ================================================================
# CORS Configuration
# ================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://admin:3000,http://172.104.40.189:3000,http://172.104.40.189:8080,http://172.104.40.189:8000,http://172.104.40.189:8001,http://172.104.40.189:8002
CORS_ALLOW_CREDENTIALS=true

# ================================================================
# Security Configuration
# ================================================================
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMIT=true
RATE_LIMIT_AUTH=5/minute
RATE_LIMIT_UPLOAD=10/minute

# ================================================================
# Monitoring Configuration
# ================================================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ================================================================
# File Upload Settings
# ================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# ================================================================
# Pagination Settings
# ================================================================
REPORTS_PER_PAGE=20
MATCHES_PER_PAGE=20
USERS_PER_PAGE=20

# ================================================================
# Background Tasks
# ================================================================
ENABLE_BACKGROUND_TASKS=true
WORKER_CONCURRENCY=4

# ================================================================
# Email Configuration (Optional)
# ================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
