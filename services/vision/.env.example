# ================================================================
# Vision Service - Environment Configuration
# ================================================================
# For standalone development or Docker Compose
# ================================================================

# ========== REDIS CACHE ==========
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=86400  # 24 hours

# ========== GPU CONFIGURATION ==========
USE_GPU=false  # Set to 'true' if GPU is available

# ========== FEATURE TOGGLES ==========
ENABLE_METRICS=true
ENABLE_RATE_LIMIT=true
ENABLE_OBJECT_DETECTION=true
ENABLE_OCR=true
ENABLE_CLIP=true
ENABLE_NSFW_DETECTION=true

# ========== PERFORMANCE ==========
LRU_CACHE_SIZE=1000
BATCH_SIZE=16

# ========== LOGGING ==========
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ========== MODEL CONFIGURATION ==========
# YOLO model size: yolov8n (nano), yolov8s (small), yolov8m (medium)
YOLO_MODEL=yolov8n.pt

# CLIP model: ViT-B/32 (default), ViT-L/14 (larger, slower)
CLIP_MODEL=ViT-B/32

# ========== SERVER ==========
HOST=0.0.0.0
PORT=8002


# OCR languages: comma-separated (en,si,ta for English, Sinhala, Tamil)
OCR_LANGUAGES=en

# ===== Resource Limits =====
MAX_IMAGE_SIZE_MB=10
MAX_IMAGE_DIMENSION=4096

# ===== Hash Thresholds =====
HASH_THRESHOLD_SIMILAR=10
HASH_THRESHOLD_MATCH=14
