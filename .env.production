# ================================================================
# Production Environment Configuration
# ================================================================
# This file contains production-specific environment variables
# Copy this file to .env.production and customize for your deployment
# ================================================================

# ================================================================
# Database Configuration
# ================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=lostfound
DB_PORT=5432

# ================================================================
# Redis Configuration
# ================================================================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_PORT=6379

# ================================================================
# MinIO Configuration
# ================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_MINIO_PASSWORD
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# ================================================================
# API Service Configuration
# ================================================================
API_PORT=8000
WORKER_PORT=8000
NLP_PORT=8001
VISION_PORT=8002
ADMIN_PORT=3000
NGINX_PORT=80

# ================================================================
# Security Configuration
# ================================================================
SECRET_KEY=CHANGE_ME_SECRET_KEY_FOR_JWT
CORS_ORIGINS=http://admin:3000,http://localhost:3000,http://localhost:8080

# ================================================================
# Production Settings
# ================================================================
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# ================================================================
# Performance Configuration
# ================================================================
# Database connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis connection settings
REDIS_MAX_CONNECTIONS=50
REDIS_RETRY_ON_TIMEOUT=true
REDIS_SOCKET_KEEPALIVE=true

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ================================================================
# Monitoring Configuration (Disabled)
# ================================================================
METRICS_ENABLED=false
WORKER_MONITORING_ENABLED=false
NLP_MONITORING_ENABLED=false
VISION_MONITORING_ENABLED=false

# ================================================================
# Backup Configuration
# ================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ================================================================
# SSL/TLS Configuration (Optional)
# ================================================================
# SSL_ENABLED=false
# SSL_CERT_PATH=/etc/ssl/certs/lostfound.crt
# SSL_KEY_PATH=/etc/ssl/private/lostfound.key

# ================================================================
# External Services (Optional)
# ================================================================
# EMAIL_SERVICE_URL=
# SMS_SERVICE_URL=
# PUSH_NOTIFICATION_SERVICE_URL=