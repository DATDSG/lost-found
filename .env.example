# Environment Configuration Template

# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_URL=postgresql://lostfound:change_me@database:5432/lostfound
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lostfound
DB_USER=lostfound
DB_PASSWORD=change_me

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Service URLs
API_BASE_URL=http://localhost:8000
NLP_SERVICE_URL=http://localhost:8090
VISION_SERVICE_URL=http://localhost:8091

# Authentication
JWT_SECRET_KEY=change_me_jwt_secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=change_me_email_pw
FROM_EMAIL=noreply@lostfound.com

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# API Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
API_V1_STR=/api/v1
PROJECT_NAME="Lost & Found System"

# Feature Flags
ENABLE_NLP=true
ENABLE_VISION=true
ENABLE_NOTIFICATIONS=true
ENABLE_CHAT=true

# Admin bootstrap user (used by compose for initial seeding)
ADMIN_EMAIL=admin@localhost
ADMIN_PASSWORD=change_me_admin_pw

# Backwards-compatible variable names used in some service code / compose
JWT_SECRET=${JWT_SECRET_KEY}
POSTGRES_DB=${DB_NAME}
POSTGRES_USER=${DB_USER}
POSTGRES_PASSWORD=${DB_PASSWORD}

# Optional object storage (blank by default)
S3_ENDPOINT_URL=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# NLP model versions (pin for reproducible builds)
SPACY_EN_MODEL_VERSION=3.7.1
SPACY_XX_MODEL_VERSION=3.7.0

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Development Settings
DEBUG=true
TESTING=false