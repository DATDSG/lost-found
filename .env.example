# Environment Configuration
ENV=development

# Database Configuration (PostgreSQL with PostGIS)
DATABASE_URL=postgresql://lostfound:lostfound@localhost:5432/lostfound

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Authentication (MUST CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Admin Bootstrap (MUST SET IN PRODUCTION!)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme123

# Service-to-Service Authentication
SERVICE_API_KEY=your-service-api-key-change-in-production

# Feature Flags
NLP_ON=false
CV_ON=true

# External Services
NLP_SERVICE_URL=http://localhost:8090
VISION_SERVICE_URL=http://localhost:8091

# S3/MinIO Configuration
S3_ENDPOINT_URL=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET=media
S3_PRESIGN_EXPIRES=3600

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:19006

# Email Configuration (Optional)
EMAIL_ENABLED=false
EMAIL_FROM=noreply@lostfound.com
EMAIL_PROVIDER=smtp

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# SendGrid (Alternative to SMTP)
SENDGRID_API_KEY=

# Firebase Cloud Messaging (Optional)
FCM_ENABLED=false
FCM_SERVER_KEY=

# SMS/Twilio Configuration (Optional)
SMS_ENABLED=false
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Monitoring & Error Tracking
SENTRY_DSN=
LOG_LEVEL=INFO

# Matching Configuration
MIN_MATCH_SCORE=0.3
TOP_K_MATCHES=10
DEFAULT_TIME_WINDOW_DAYS=14
MAX_TIME_WINDOW_DAYS=90
MAX_SEARCH_RADIUS_KM=50.0

# Privacy Settings
ENABLE_COORDINATE_FUZZING=true
ENABLE_MASKED_CHAT=true
ENABLE_AUDIT_LOGGING=true
